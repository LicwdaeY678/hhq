/* pages/hot/hot.wxss */
@import '../../font/iconfont.wxss';
/*******************************************/
.fsz {
  font-size: 26rpx;
  color: #ed373d;
}

.category {
  font-size: 28rpx;
}

.title {
  font-size: 32rpx;
}

.goods_item_text_single_line {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
} 

.goods_item_text {
  font-size: 34rpx;
  display: -webkit-box;
  line-height: 42rpx;
  align-items: center;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}

/**
去除横向滚动条
*/
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.content{
  width: 100%;
}

.top_radius {
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.all_radius {
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
  border-bottom-left-radius: 5px;
  border-bottom-right-radius: 5px;
}

/****************************************************/
.stv-container {
  
  left: 0;
  right: 0;
}
.withAnimate {
  transition: all 300ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 30rpx;
  color: #666666;
}
.stv-container .tab-bar .tab-active {
  color: #ed373d;
}
.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}
.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 2rpx;
  background-color: #ed373d;
}

.contact{
  width: 50px;
  height:50px;
  position: fixed;
  right: 10px;
  bottom: 20%;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius:25px;
  padding:0;
  margin:0;
  background: #f1f1f1;
  border: 1rpx solid #f1f1f1;
  line-height: 30px;
  z-index: 99;
}
.contact text{
  font-size: 24px;
}

.active{
  color: #f42f19;
}