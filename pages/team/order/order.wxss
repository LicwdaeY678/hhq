@import '../../../font/iconfont.wxss';
page {
  background: #f2f2f2;
}

.stv-container {
  background: #ffffff;
  left: 0;
  right: 0;
}
.withAnimate {
  transition: all 100ms ease;
  -webkit-transform: translate3d(0, 0, 0);
  -moz-transform: translate3d(0, 0, 0);
  -ms-transform: translate3d(0, 0, 0);
  transform: translate3d(0, 0, 0);
  -webkit-backface-visibility: hidden;
  -moz-backface-visibility: hidden;
  -ms-backface-visibility: hidden;
  backface-visibility: hidden;
  -webkit-perspective: 1000;
  -moz-perspective: 1000;
  -ms-perspective: 1000;
  perspective: 1000;
}
.stv-container .tab-bar {
  position: relative;
  display: flex;
  font-size: 32rpx;
}
.stv-container .tab-bar .tab-active {
  color: #ed373d;
}
.stv-container .tab-bar .tab {
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 16rpx;
  padding-bottom: 20rpx;
}
.stv-container .tab-bar .under-line {
  position: absolute;
  bottom: 0;
  height: 2rpx;
  background-color: #ed373d;
}


/*image clip top right bottom left*/

.order_item_text {
  font-size: 32rpx;
  display: -webkit-box;
  line-height: 40rpx;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  overflow: hidden;
  text-overflow:ellipsis;
}


.contact{
  width: 50px;
  height:50px;
  position: fixed;
  right: 10px;
  bottom: 20%;
  font-size: 24px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius:25px;
  padding:0;
  margin:0;
  background: #f1f1f1;
  border: 1rpx solid #f1f1f1;
  line-height: 30px;
  z-index: 99;
}
.contact text{
  font-size: 24px;
}
